{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["esnext", "DOM"],
    "types": ["fvtt-types", "jest"]
  },
  "include": ["src/**/*", "test/**/*", "__tests__/**/*"]
}